<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33cc5a"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_column="7"
    android:gravity="center"
    tools:context=".Home">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_location_city_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="DASHBOARD"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_archive_black_24dp"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/lihatbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="List Data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_person_add_black_24dp"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/inputbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Input Data" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/absen"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/absenbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="absensi" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/gaji"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/gajibtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="gaji karyawan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/maps"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/mapsbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Maps" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_info_black_24dp"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/infobtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="About" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/exit"
            android:background="@drawable/stylebutton"/>
        <Button
            android:id="@+id/exitbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/stylebutton"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="exit" />
    </LinearLayout>
</LinearLayout>