<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF008000"
    android:src="@drawable/pasa"
    tools:context=".SplashScreen">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/splash1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pasa"
        />

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash1"
        android:layout_marginTop="50dp"
        android:text="SisFo Android"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtJdl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJudul"
        android:layout_marginTop="20dp"
        android:text="KEPEGAWAIAN"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtJdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJdl3"
        android:layout_marginTop="20dp"
        android:text="Kantor Bupati"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtJdl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJdl"
        android:layout_marginTop="20dp"
        android:text="Pasaman"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_below="@id/txtJdl"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/splash2"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/req"       />


</RelativeLayout>